{
  "compilerOptions": {
    "target": "ES6", // 컴파일된 Javscript가 ES6 표준을 따르도록 한다
    "module": "CommonJS", // node.js에서 사용하는 모듈 시스템을 사용한다
    "outDir": "./dist", // 컴파일된 파일의 출력 경로를 설정ㅎ나다
    "rootDir": "./src", // 소스 코드의 기본 디렉터리를 설정한다
    "strict": true, // TypeScript의 엄격 모드 활성화
    "strictPropertyInitialization": false, // 속성 초기화 검사를 비활성화
    "esModuleInterop": true, // CoomonJS와 ES module간의 호환성을 지원한다

    "experimentalDecorators": true, // 데코레이터를 사용할 수 있도록 한다
    "emitDecoratorMetadata": true // 데코레이터 메타데이터를 출력한다
  },
  "include": ["src/**/*", "../problem-service/src/index.ts"],
  "exclude": ["node_modules"]
}
